{
  "name": "Hello Extensions",
  "description": "set body styles user-select text",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "permissions": ["storage","activeTab"],
  "content_scripts": [ {
    "matches": ["<all_urls>"],
    "css": ["styles.css"]
  } ]
}